@model ResumenPlantilla;

<h1>Resumen Plantilla</h1>

<form method="post">
    <label>Introduce salario</label>
    <input type="number" name="salario" />

    <button type="submit">Envíar</button>
</form>
@if (Model != null)
{
    <p>Personas: @Model.Personas</p>
    <p>Máximo salario: @Model.MaximoSalario</p>
    <p>Mínimo salario: @Model.MinimoSalario</p>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apellido</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Plantilla emp in Model.Plantilla)
            {
            <tr>
                <td>@emp.IdEmpleado</td>
                <td>@emp.Apellido</td>
                <td>@emp.Salario</td>
            </tr>
            }
        </tbody>
    </table>
}
